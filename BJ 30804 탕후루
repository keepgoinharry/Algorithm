#include <bits/stdc++.h>
using namespace std;
using ll = long long;

int main() {
  ios::sync_with_stdio(false); // C 표준 입출력과 동기화 끔
  cin.tie(nullptr);
  int N;
  cin>>N;
  map<int,int> freq;
  vector<int> v1;
  for(int i=0; i<N; i++)
    {
      int tmp;
      cin>>tmp;
      v1.push_back(tmp);
    }

  int l = 0, answer = 0;
  for(int r=0; r<N; r++)
    {
      freq[v1[r]]++;

      while(freq.size()>2)
        {
          freq[v1[l]]--;
          if(freq[v1[l]] == 0)freq.erase(v1[l]);
          l++;
        }
      answer = max(answer,r-l+1);
    }
  cout<<answer;
}


