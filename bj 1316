#include <bits/stdc++.h>

using namespace std;
using ll = long long;
using pi=pair<int,int>;


bool check(string s)
{
  map<char,bool> visited;
  char last = s[0];
  visited[last] = 1;
  for(int i=1;i<s.size(); i++)
    {
      if(last == s[i])continue;
      else
      {
        if(!visited[s[i]])
        {
          visited[s[i]]= true;
          last = s[i];
        }
        else return false;
      }
    }
  return true;
}
int main() {
  ios::sync_with_stdio(false);
  cin.tie(0);
  int N;
  int answer = 0;
  cin>>N;
  for(int i=0; i<N; i++)
    {
      string s;
      cin>>s;
      if(check(s))
      {
        answer++;
      }
    }
  cout<<answer;
}
