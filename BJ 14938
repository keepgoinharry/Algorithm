#include <bits/stdc++.h>
using namespace std;
using ll = long long;
int n,m,r;
vector<vector<int>> graph;
vector<int> items;
int answer = 0;

int main() {
  ios::sync_with_stdio(false);
  cin.tie(nullptr);
  cin>>n>>m>>r;
  graph = vector<vector<int>>(n+1,vector<int>(n+1,1e9));
  items = vector<int>(n+1,0);
  for(int i=1; i<=n; i++)
    {
      int item;
      cin>>item;
      items[i] = item;
    }

  for(int i=0; i<r; i++)
    {
      int a,b,c;
      cin>>a>>b>>c;
      graph[a][b] = c;
      graph[b][a] = c;
    }

  for(int i=0; i<=n; i++)graph[i][i] = 0;

  for(int k=1; k<=n; k++)
    {
      for(int i=1; i<=n; i++)
        {
          for(int j=1; j<=n; j++)
            {
              if(graph[i][j]>graph[i][k]+graph[k][j]){
                graph[i][j] = graph[i][k] +graph[k][j];
              }
            }
        }
    }


  
  for(int i=1; i<=n; i++)
    {
      int num = 0;
      for(int j=1; j<=n; j++)
        {
          if(graph[i][j]<=m)
          {
            num += items[j];
          }
        }
      answer = max(answer,num);
    }

  cout<<answer;
}
