#include <bits/stdc++.h>
using namespace std;
using ll = long long;
using pi = pair<int,int>;
using pli = pair<ll,int>;
int INF1 = 1e9;
ll INF = 1e15;
int C,N;
vector<pi> v;

int main() {
  ios::sync_with_stdio(false);
  cin.tie(0);
  cin>>C>>N;
  for(int i=0; i<N; i++)
    {
      int a,b;
      cin>>a>>b;
      v.push_back({a,b});//드는돈,가치
    }
  vector<int> dp(C+101,INF1);
  dp[0]=0;
  for(int i=0; i<=C; i++)
    {
      for(int j=0; j<v.size(); j++)
        {
          int cost = v[j].first;
          int value = v[j].second;
          int next = i + value;
          if(next>C)next = C;
          dp[next] = min(dp[next],dp[i] + cost);
        }
    }

  cout<<dp[C];
}
