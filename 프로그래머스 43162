#include <string>
#include <vector>

using namespace std;
int N;
void dfs(vector<vector<int>>& computers, vector<bool>& visited,int num)
{
    visited[num] = true;
    for(int i=0; i<N; i++)
    {
        int cur = computers[num][i];
        if(cur&&!visited[i])
        {
            dfs(computers,visited,i);   
        }
    }
}

int solution(int n, vector<vector<int>> computers) {
    int answer = 0;
    vector<bool> visited(n,0);
    N=n;
    for(int i=0; i<n; i++)
    {
        if(!visited[i])
        {
            dfs(computers,visited,i);
            answer++;
        }
    }
    return answer;
}
