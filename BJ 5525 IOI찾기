#include <bits/stdc++.h>
using namespace std;

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int N, M;
    cin >> N >> M;
    string s;
    cin >> s;

    int ans = 0;
    int cnt = 0;
    for (int i = 1; i < M - 1; i++) {
        if (s[i - 1] == 'I' && s[i] == 'O' && s[i + 1] == 'I') {
            cnt++;
            if (cnt >= N) ans++;
            i++; // 'IOI'에서 'OI' 다음 인덱스로 이동
        } else {
            cnt = 0;
        }
    }
    cout << ans;
}
