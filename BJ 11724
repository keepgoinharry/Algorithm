#include <bits/stdc++.h>
using namespace std;
using ll = long long;
int N,M;
vector<vector<int>> graph;
void dfs(int num, vector<bool>& visited)
{
  visited[num] = true;
  for(int i=0; i<graph[num].size(); i++)
    {
      if(!visited[graph[num][i]])
      {
        dfs(graph[num][i],visited);
      }
    }
}
int main() {
  ios::sync_with_stdio(false); // C 표준 입출력과 동기화 끔
  cin.tie(nullptr);
  
  cin>>N>>M;
  graph = vector<vector<int>>(N+1);
  vector<bool> visited(N+1);
  
  for(int i=0; i<M; i++)
    {
      int a,b;
      cin>>a>>b;
      graph[a].push_back(b);
      graph[b].push_back(a);
    }

  int answer = 0;
  for(int i=1; i<=N;i++)
    {
      if(!visited[i])
      {
        dfs(i,visited);
        answer++;
      }
    }
  cout<<answer;
  
}

