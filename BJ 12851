#include <bits/stdc++.h>
using namespace std;
using ll = long long;
int n,m;
vector<vector<ll>> v;
int answer = 0;
ll INF = 1e9;
vector<int> dp(100001,-1);
vector<int> cnt(100001,0);
int main() {
  ios::sync_with_stdio(false);
  cin.tie(nullptr);
  int N,K;
  cin>>N>>K;
  queue<int> q;//cx, cd
  dp[N] = 0;
  cnt[N] = 1;
  q.push(N);
  while(!q.empty())
    {
      int cx = q.front();
      q.pop();
      
      for(int nx : {cx-1, cx+1, cx*2})
        {
          if(nx<0||nx>=100001)continue;
          if(dp[nx]== -1)
          {
            dp[nx] = dp[cx] + 1;
            q.push(nx);
            cnt[nx] = cnt[cx];
          }
          
          else if(dp[nx] == dp[cx] + 1)
          {
            cnt[nx] += cnt[cx];
          }
        }
    }
  
  cout << dp[K] << "\n" << cnt[K] << "\n";
}
