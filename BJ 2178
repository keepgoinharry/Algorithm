#include <bits/stdc++.h>
using namespace std;
using ll = long long;

int INF=1e9;
int dx[4]={0,0,-1,1};
int dy[4]= {1,-1,0,0};
int main() {
  ios::sync_with_stdio(false); // C 표준 입출력과 동기화 끔
  cin.tie(nullptr);
  int N,M;
  cin>>N>>M;
  vector<vector<int>> dist(N,vector<int>(M,0));
  for(int i=0; i<N; i++)
    {
      string s;
      cin>>s;
      for(int j=0; j<s.size(); j++)
        {
          dist[i][j] = s[j] - '0';
        }
    }

  queue<pair<int,int>> q;
  q.push({0,0});
  while(!q.empty())
    {
      int cx = q.front().first;
      int cy = q.front().second;
      q.pop();

      for(int i=0; i<4; i++)
        {
          int nx = cx + dx[i];
          int ny = cy + dy[i];
          if(nx>=N || ny>=M || nx<0||ny<0)continue;
          if(dist[nx][ny]==1)
          {
            dist[nx][ny] = dist[cx][cy]+1;
            q.push({nx,ny});
          }
        }
    }
  cout<<dist[N-1][M-1];
}


