#include <bits/stdc++.h>

using namespace std;
using ll = long long;
using pi=pair<int,int>;
vector<string> v = {"c=","c-","dz=","d-","lj","nj","s=","z="};
int main() {
  ios::sync_with_stdio(false);
  cin.tie(0);
  string s;
  cin>>s;
  int answer = 0;
  for(int i=0; i<s.size();)
    {
      bool matched = false;
      for(auto& cro:v)
        {
          if(s.substr(i,cro.size())==cro)
          {
            answer++;
            i+=cro.size();
            matched = true;
            break;
          }
        }
      if(!matched)
      {
        answer++;
        i++;
      }
    }
  cout<<answer;
}
