#include <bits/stdc++.h>
using namespace std;
using ll = long long;
bool cmp(pair<ll,ll> a,pair<ll,ll> b)
{
  if(a.second==b.second)return a.first<b.first;
  return a.second<b.second;
}

int main(int argc, char* argv[]) {
  ios::sync_with_stdio(false);
  cin.tie(nullptr);
  
  vector<pair<ll,ll>> v;
  int N;
  cin>>N;
  for(int i=0; i<N; i++)
    {
      ll a,b;
      cin>>a>>b;
      v.push_back({a,b});
    }

  sort(v.begin(),v.end(),cmp);
  
  ll answer = 1;
  ll last = v[0].second;
  for(int i=1; i<v.size(); i++)
    {
      if(v[i].first>=last)
      {
        answer++;
        last = v[i].second;
      }
    }

  cout<<answer;
}
