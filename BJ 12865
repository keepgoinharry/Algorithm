#include <bits/stdc++.h>
using namespace std;
using ll = long long;
int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int N,K;
    cin>>N>>K;
    vector<ll> dp(K+1,0);
    vector<pair<int,int>> v;
    for(int i=0; i<N; i++)
      {
        int a,b;
        cin>>a>>b;
        v.push_back({a,b});
      }

    for(int i=0; i<v.size(); i++)
      {
        int w = v[i].first;
        int value = v[i].second;
        for(int j=K; j>=w; j--)
          {
            dp[j] = max(dp[j],dp[j-w]+value);
          }
      }
    cout<<dp[K];
}
