#include <bits/stdc++.h>
using namespace std;
using ll = long long;

bool is_number(const std::string& str) {
    return !str.empty() && std::all_of(str.begin(), str.end(), ::isdigit);
}

int main() {
  ios::sync_with_stdio(false); // C 표준 입출력과 동기화 끔
  cin.tie(nullptr);
  
  int dp[1000001];
  dp[0]=0;
  dp[1]=0;
  dp[2]=1;
  dp[3]=1;
  dp[4]=2;
  for(int i=5;i<1000001;i++)
    {
      if(i%3==0)
      {
        if(i%2==0)
        {
          int num = min(dp[i/3],dp[i-1]);
          num = min(dp[i/2],num);
          dp[i] = num + 1;
        }
        else dp[i]= min(dp[i/3],dp[i-1]) + 1;
        
      }
      else if(i%2==0)
      {
        dp[i] = min(dp[i/2],dp[i-1]) + 1;
      }
      else dp[i] = dp[i-1]+1;
    }
  int num;
  cin>>num;
  cout<<dp[num];
}

