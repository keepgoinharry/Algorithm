#include <bits/stdc++.h>
using namespace std;
using ll = long long;
int main() { 
  int n,k;

  cin>>n>>k;

  vector<ll> v;
  for(int i=0; i<n; i++)
    {
      ll a;
      cin>>a;
      v.push_back(a);
    }

  ll answer = 0;
  ll s = 0;
  ll e = 10e9;


  while(s<=e)
    {
      ll mid = (s+e)/2;
      //if(mid == 0)break;
      int tmp = 0;

      for(int i=0; i<v.size(); i++)
        {
          tmp+= v[i]/mid;
        }
      
      if(tmp<k)
      {
        e = mid-1;
        
      }
      else
      { 
        //e = mid-1;
        s = mid+1;
        answer = mid;

      }
    }

  cout<<answer;
}
