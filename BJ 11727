#include <bits/stdc++.h>
using namespace std;
using ll = long long;
int main() {
  ios::sync_with_stdio(false); // C 표준 입출력과 동기화 끔
  cin.tie(nullptr);
  int N;
  cin>>N;
  vector<ll> dp(1001);
  dp[0]=0;
  dp[1]=1;
  dp[2]=3;
  dp[3]=5;
  for(int i=4; i<1001; i++)dp[i]=((dp[i-1]+2*dp[i-2]))%10007;
  cout<<dp[N];
  
}

