#include <bits/stdc++.h>
using namespace std;
using ll = long long;

bool is_number(const std::string& str) {
    return !str.empty() && std::all_of(str.begin(), str.end(), ::isdigit);
}

int main() {
  ios::sync_with_stdio(false); // C 표준 입출력과 동기화 끔
  cin.tie(nullptr);
  int N,K;
  cin>>N;
  vector<int> v;
  for(int i=0; i<N; i++)
    {
      int tmp;
      cin>>tmp;
      v.push_back(tmp);
    }
  sort(v.begin(),v.end());
  int answer =0;
  for(int i=0; i<v.size();i++){
    for(int j=0;j<=i;j++)
      {
        answer+=v[j];
      }
  }
  cout<<answer;
}

