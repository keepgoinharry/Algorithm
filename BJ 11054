#include <bits/stdc++.h>
using namespace std;
int N;
vector<int> v;
vector<int> temp;
int answer = 0;

int main() {
  ios::sync_with_stdio(false);
  cin.tie(nullptr);
  cin>>N;
  for(int i=0; i<N; i++)
    {
      int tmp;
      cin>>tmp;
      v.push_back(tmp);
    }
  vector<int> inc(N,1);
  inc[0] = 1;

  for(int i=0; i<N; i++)
    {
      for(int j=0; j<i; j++)
        {
          if(v[i]>v[j])inc[i] = max(inc[i],inc[j]+1);
        }
    }

  vector<int> dec(N,1);
  for(int i=N-1; i>=0; i--)
    {
      for(int j=i+1; j<N; j++)
        {
          if(v[i]>v[j])dec[i] = max(dec[i],dec[j]+1);
        }
    }

  int answer = 0;
  for (int i = 0; i < N; i++) {
      answer = max(answer, inc[i] + dec[i] - 1);
  }

  cout << answer << "\n";
  return 0;
  //cout<<answer;
}
