#include <bits/stdc++.h>
using namespace std;
using ll = long long;
using pi = pair<int,int>;
using pli = pair<ll,int>;
int INF1 = 1e9;
ll INF = 1e15;

int main() {
  ios::sync_with_stdio(false);
  cin.tie(0);
  int n,m;
    cin>>n>>m;

    vector<vector<int>> graph(n+1,vector<int>(n+1,INF1));

    for(int i=1; i<=n; i++)graph[i][i] = 0;
    
    for(int i=0; i<m; i++)
        {
            int a,b,c;
            cin>>a>>b>>c;
            graph[a][b] = 0;

            if(c==0)graph[b][a] = 1;
            else graph[b][a] = 0;
        }

    for(int k=1; k<=n; k++)
        {
            for(int i=1; i<=n; i++)
                {
                    for(int j=1; j<=n; j++)
                        {
                            if(graph[i][j]>graph[i][k]+graph[k][j])
                            {
                                graph[i][j]=graph[i][k]+graph[k][j];
                            }
                        }
                }
        }
    int K;
    cin>>K;
    for(int i=0; i<K; i++)
        {
            int a,b;
            cin>>a>>b;
            cout<<graph[a][b]<<"\n";
        }
}
