#include <bits/stdc++.h>
using namespace std;
using ll = long long;
vector<vector<int>> cost;
int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);
    int N;
    cin>>N;
    cost.resize(N);
    for(int i=0; i<N; i++)
    {
      vector<int> tmp;
      for(int j=0; j<3; j++)
        {
          int t;
          cin>>t;
          tmp.push_back(t);
        }
      cost[i] = tmp;
    }

  vector<vector<ll>> dp(N,vector<ll>(3,0));
  dp[0][0] = cost[0][0];
  dp[0][1] = cost[0][1];
  dp[0][2] = cost[0][2];
  for(int i=1; i<N; i++)
    {
      dp[i][0] = cost[i][0]+min(dp[i-1][1],dp[i-1][2]);
      dp[i][1] = cost[i][1]+min(dp[i-1][0],dp[i-1][2]);
      dp[i][2] = cost[i][2]+min(dp[i-1][0],dp[i-1][1]);
    }
  ll answer = INT_MAX;
  for(auto i : dp[N-1])
    {
      answer = min(i,answer);
    }

  cout<<answer;
}
